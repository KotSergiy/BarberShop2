<h4>Список парикмахеров</h4>
<% @barbers.each do |barber| %>
  <p>
    <%= barber.name %>
  </p>
<% end %>
<br>
<h4>Список клиентов</h4>
<table class="table">
  <thead>
      <tr>
        <th>Номер</th>
        <th>Имя</th>
        <th>Телефон</th>
        <th>Дата и время</th>
        <th>Мастер</th>
        <th>Цвет</th>
      </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%=client.id%></td>
        <td><%=client.name%></td>
        <td><%=client.phone%></td>
        <td><%=client.datestamp%></td>
        <td><%=client.barber%></td>
        <td style="background-color: <%=client.color%>"><%=client.color%></td>
      </tr>
    <% end %>
  </tbody>
</table>
